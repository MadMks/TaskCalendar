@model DataViewListTask

@{
    ViewData["Title"] = "ListTasksForDay";
}

<h1>ListTasksForDay</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tasks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @*@Html.ActionLink("Delete", "Delete", new { id = item.TodoTaskID, dateTime = item.DateTime })*@
                <form action="Delete" method="post">
                    <input type="hidden" name="id" value="@item.TodoTaskID" />
                    <input type="hidden" name="dateTime" value="@item.DateTime" />
                    <input type="submit" value="Delete" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<div>

    <div class="form-group">
        @Html.LabelFor(x => Model.DropDownTimes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownListFor(x => Model.DropDownTimes, new SelectList(Model.DropDownTimes.Select(date => date.ToString("H:mm"))), htmlAttributes: new { @class = "form-control", name = "DateTime" })
            @Html.ValidationMessageFor(x => x.DropDownTimes, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-5">
            text
        </div>
    </div>

    <h2>Создать задачу</h2>
    <form action="Add" method="post">
        <div class="item">
            <label>DateTime</label>
            @*@Html.DropDownListFor(x => Model.DropDownTimes, new SelectList(Model.DropDownTimes.Select(date => date.ToString("H:mm"))), htmlAttributes: new { @class = "form-control", name = "DateTime" })*@
            @*<input name="DateTime" value="@Model.Tasks[0].DateTime" />*@
            <select name="DateTime" asp-items="@new SelectList(Model.DropDownTimes)"></select>
            @*@Html.DropDownListFor(m => m.DropDownTimes, Model.DropDownTimes as IEnumerable<SelectListItem>)*@
        </div>
        <div class="item">
            <label>Description</label>
            <input type="text" name="Description" value="" />
        </div>
        <input type="submit" value="Отправить" />
    </form>
</div>
