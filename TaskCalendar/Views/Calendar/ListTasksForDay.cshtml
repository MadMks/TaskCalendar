@model DataViewListTask

@{
    ViewData["Title"] = "ListTasksForDay";
}

<h1>ListTasksForDay</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasks[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tasks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

<div>

    <div class="form-group">
        @Html.LabelFor(x => Model.DropDownTimes, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownListFor(x => Model.DropDownTimes, new SelectList(Model.DropDownTimes.ToList()), htmlAttributes: new { @class = "form-control", id = "Country" })
            @Html.ValidationMessageFor(x => x.DropDownTimes, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-5">
            text
        </div>
    </div>

    <h2>Создать задачу</h2>
    <form action="/Task/Add" method="post">
        <div class="item">
            <label>DateTime</label>
            @*<input name="DateTime" value="@Model.Tasks[0].DateTime" />*@
            @*<select asp-for="DateTime" asp-items="@new SelectList(Model.DropDownTimes)"></select>*@
            @*@Html.DropDownListFor(m => m.DropDownTimes, Model.DropDownTimes as IEnumerable<SelectListItem>)*@
        </div>
        <div class="item">
            <label>Description</label>
            <input name="Description" value="@Model.Tasks[0].Description" />
        </div>
        <input type="submit" value="Отправить" />
    </form>
</div>
